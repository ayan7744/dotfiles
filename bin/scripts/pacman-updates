#!/bin/sh

tmpfile=/tmp/checkupdates.$USER

checkupdates_dump() {
    isonline && echo "[$(date)]" > $tmpfile
    checkupdates 1>> $tmpfile 2> /dev/null
    return 0
}

show_updates() {
    [ -f $tmpfile] && /usr/bin/cat "$tmpfile"
}

update_count() {
    if [ -f $tmpfile ]
    then
        echo "$(($(wc -l < $tmpfile) - 1 ))"
    else 
        checkupdates_dump 2> /dev/null
        echo "$(($(wc -l < $tmpfile) - 1 ))"
    fi
    return 0
}

case $1 in 
    "--dump")
        checkupdates_dump
        ;;
    "--count")
        update_count
        ;;
    *)
        show_updates
        exit 0
esac

