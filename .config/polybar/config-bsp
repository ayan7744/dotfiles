[module/pacman-updates]
type = custom/ipc
hook-0 = pacman-updates --count
hook-1 = echo "0"
click-left = $TERMINAL --class floating-term,floating-term -e fish -c "updateall && fish -i"
click-right = pacman-updates --dump &> /dev/null && polybar-msg hook pacman-updates 1 &> /dev/null
; format-foreground = ${colors.foreground}
; format-background = ${colors.background}
format-prefix = "Ôçõ  %{T4}"
format-prefix-foreground = ${colors.white}
initial = 2

[module/pacman-updates-refresh]
; hack to update hook-0 of pacman-updates module. (Also update /tmp/archnews.$USER)
type = custom/script
; sleep for 1 minute so that laptop can nconnect to internet
exec = sleep 60 && pacman-updates --dump && polybar-msg hook pacman-updates 1  &> /dev/null
interval = 3540
################################################################################

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = "ÔÉÇ "
