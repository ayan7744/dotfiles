# configs
#
abbr xinitrcconf '$EDITOR $HOME/.xinitrc'
abbr i3conf '$EDITOR $XDG_CONFIG_HOME/i3/config'
abbr fishconf '$EDITOR $XDG_CONFIG_HOME/fish/config.fish'
abbr shellconf 'c $XDG_CONFIG_HOME/shell-config'
abbr polyconf 'c $XDG_CONFIG_HOME/polybar'
abbr alacrittyconf '$EDITOR $XDG_CONFIG_HOME/alacritty/alacritty.yml'
abbr nvimconf '$EDITOR $XDG_CONFIG_HOME/nvim/init.vim'
abbr quicktexconf '$EDITOR $XDG_CONFIG_HOME/nvim/quicktex.vim'
abbr picomconf '$EDITOR $XDG_CONFIG_HOME/picom/picom.conf'
abbr zathuraconf '$EDITOR $XDG_CONFIG_HOME/zathura/zathurarc'
# abbr xbindkeysconf '$EDITOR $HOME/.xbindkeysrc'
abbr gtk3conf 'c $XDG_CONFIG_HOME/gtk-3.0'
abbr picomconf '$EDITOR $XDG_CONFIG_HOME/picom/picom.conf'
abbr tgconf '$EDITOR $XDG_CONFIG_HOME/tg/conf.py'
abbr greenclipconf '$EDITOR $XDG_CONFIG_HOME/greenclip.cfg'
abbr abbrconf '$EDITOR $XDG_CONFIG_HOME/shell-config/source-once/abbr'
abbr aliasconf '$EDITOR $XDG_CONFIG_HOME/shell-config/source-multiple/aliases'
abbr envconf '$EDITOR $XDG_CONFIG_HOME/shell-config/source-once/env'
abbr texconf '$EDITOR $XDG_CONFIG_HOME/shell-config/source-multiple/tex'
abbr myfunctionconf '$EDITOR $XDG_CONFIG_HOME/shell-config/source-multiple/myfunctions'
abbr greetingconf '$EDITOR $XDG_CONFIG_HOME/fish/greeting'

abbr bspconf '$EDITOR $XDG_CONFIG_HOME/bspwm/bspwmrc'
abbr sxhkdconf '$EDITOR $XDG_CONFIG_HOME/sxhkd/sxhkdrc'
abbr bsplayoutconf '$EDITOR $XDG_CONFIG_HOME/bsp-layout/layoutrc'
abbr polybspconf '$EDITOR $XDG_CONFIG_HOME/polybar/config-bsp'
abbr tlpconf 'sudo -e /etc/tlp.conf'
abbr cmdlineconf 'sudo -e /boot/loader/entries/arch.conf'
abbr gitignoreconf '$EDITOR $XDG_CONFIG_HOME/git/ignore'

# NetworkManager
abbr nmwifi 'nmcli device wifi'

# prefix sudo
abbr journalctl 'sudo journalctl'
abbr jctlwarn 'sudo journalctl -xb -p 4'
abbr dmesg 'sudo dmesg'
abbr powertop 'sudo powertop'
abbr find 'sudo find'
abbr showkey 'sudo showkey'
abbr tlp-stat 'sudo tlp-stat'
